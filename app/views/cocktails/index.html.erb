
<h3>Se√±or Cocktail</h3>
<%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-outline-dark mb-3" %>

<div class="container">
<% @cocktails.each do |cocktail| %>
  <div class="d-flex flex-md-equal w-100 my-md-3 pl-md-3">
      <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
        <div class="my-3 p-3">
          <h2 class="display-5"><%= cocktail.name %></h2>
          <p class="lead">And an even wittier subheading.</p>
        </div>
        <div class="bg-dark box-shadow mx-auto" style="width: 90%; height: 300px; border-radius: 21px 21px 0 0;">
          <%= link_to 'View', cocktail %>
          <% cocktail.doses.each do |dose| %>
            <p style= "color: white"> <%= dose.description %></p>
            <p> <%= dose.ingredient.name %> </p>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
</div>
