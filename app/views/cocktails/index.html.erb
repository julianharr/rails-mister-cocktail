<div class="container">
  <div class="column-left m-3">
    <div class="container-nav">
    <h3>Señor Cocktail</h3>
    </div>
    <%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-outline-light" %>
  </div>

    <div class="card-container">
      <% @cocktails.each do |cocktail| %>
        <div class="card">
            <h4><%= cocktail.name %></h4>
            <%= cocktail.rating = '✰' * rand(1..5) %>
            <div class="container-options d-flex">
              <%= link_to 'View', cocktail, class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Remove', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
            </div>
        </div>
      <% end %>
    </div>
</div>
