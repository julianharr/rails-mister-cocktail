<div class="container">
  <div class="column-left m-3">
    <div class="container-nav">
    <h1>SPIRITS</h1>
    <hr>
    <%= link_to 'Create new', new_cocktail_path, class:"btn btn-default mb-3" %>
    <button class="btn btn-search">Search</button>
    </div>
  </div>

    <div class="card-container">
      <div class="container-fluid">
        <img src="https://images.unsplash.com/photo-1607344635159-59930e3330b1?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80">
      </div>

        <% @cocktails[0..2].each do %>
        <% @cocktails.each do |cocktail| %>
          <div class="card">
              <h4><%= cocktail.name %> <br>
              <%= cocktail.rating %>
              </h4>
              <div class="container-options d-flex">
                <%= link_to 'View', cocktail, class: "btn-sm btn-view px-4" %>
              </div>
          </div>
        <% end %>
        <div class="container-fluid">
        <% random_image = rand(1..71) %>
        <img src="https://source.unsplash.com/collection/96656859?sig=<%=random_image%>">
      </div>
      <% end %>
    </div>
</div>
